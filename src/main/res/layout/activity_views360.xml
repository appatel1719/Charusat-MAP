<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views360">


    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="1920px"
        android:background="#000080"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:weightSum="8">

        <Button

            android:id="@+id/CAMPUS"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="ADMIN"
            android:text="CAMPUS" />

        <Button
            android:id="@+id/CSPIT"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="cspit"
            android:text="CSPIT" />

        <Button
            android:id="@+id/PDPIAS"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="pdpias"
            android:text="PDPIAS" />

        <Button
            android:id="@+id/IIIM"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="iiim"
            android:text="IIIM" />

        <Button
            android:id="@+id/RPCP"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="rpcp"
            android:text="RPCP" />

        <Button
            android:id="@+id/CIPS"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="cips"
            android:text="CIPS" />

        <Button
            android:id="@+id/MTIN"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="mtin"
            android:text="MTIN" />

        <Button
            android:id="@+id/RESEARCH_CENTER"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/whiteButton"
            android:onClick="research"
            android:text="RESEARCH CENTER" />



    </LinearLayout>

</RelativeLayout>